---
import "../styles/global.css";
import CommonHead from "../components/CommonHead.astro";
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";

const {
	title = "Michael Mandic",
	desc = "Personal website of Michael Mandic, a software engineer based in Belgrade, Serbia.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<CommonHead />
		<title>{title}</title>
		<meta name="description" content={desc} />
	</head>
	<body
		x-data="{ 
    sidebarOpen: false, 
    scrolled: false,
    init() {
      window.addEventListener('scroll', () => {
        this.scrolled = window.scrollY > 10;
      });
    }
  }"
		class="bg-neutral-100 dark:bg-neutral-900 text-black dark:text-white font-text flex flex-col justify-center items-center"
	>
		<Header />
		<div class="pt-36 max-w-3xl w-full">
			<slot />
			<Footer />
		</div>
	</body>
</html>
