---
import "../styles/global.css";
import CommonHead from "../components/CommonHead.astro";
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
import OverflowGradients from "../components/OverflowGradients.astro";
import Navbar from "../components/Navbar.astro";

const {
	title = "Michael Mandic",
	desc = "Personal website of Michael Mandic, a software engineer based in Belgrade, Serbia.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<CommonHead />
		<title>{title}</title>
		<meta name="description" content={desc} />
	</head>
	<body
		x-data="{ 
    sidebarOpen: false, 
    scrolled: false,
    init() {
      window.addEventListener('scroll', () => {
        this.scrolled = window.scrollY > 50;
      });
    }
  }"
		class="bg-neutral-50 min-h-screen relative dark:bg-neutral-900 text-black dark:text-white font-text"
	>
		<div class="pt-8 max-w-3xl w-full mx-auto lg:pt-28">
			<slot />
			<Footer />
		</div>
		<Navbar />
	</body>
</html>
