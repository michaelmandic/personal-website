---
import { Home, AppWindow, Text } from "@lucide/astro";

const currentPath = Astro.url.pathname;

const links = [
  { href: "/", label: "Home", icon: Home },
  { href: "/projects", label: "Projects", icon: AppWindow },
  { href: "/blog", label: "Blog", icon: Text },
];
---

<nav
  class="fixed bottom-0 w-full  z-50 flex justify-center items-center pb-5 "
>
  <div
    class="bg-white drop-shadow-md/10  dark:drop-shadow-lg/100 drop-shadow-forest-900 dark:bg-forest-800 border-[1.5px] rounded-full p-2  border-forest-200 dark:border-forest-700 "
  >
    <ul
      class="flex  justify-between items-center text-forest-500  dark:text-forest-400"
    >
      {
        links.map(({ href, label, icon: Icon }) => {
          const isActive =
            currentPath === href || currentPath.startsWith(href + "/");
          return (
            <li>
              <a
                href={href}
                class={`flex w-16 transition-all active:scale-95 hover:text-black dark:hover:text-white  flex-col justify-center items-center  ${isActive ? "dark:text-green-400 text-green-600" : ""}`}
              >
                <Icon size={24} stroke-width={1.5} absoluteStrokeWidth={true} />
                <span class="text-xs">{label}</span>
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</nav>
