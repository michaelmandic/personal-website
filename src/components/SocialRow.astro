---
import { Linkedin, Github, Mail } from "@lucide/astro";
---

<div class="px-6 text-black dark:text-white flex gap-2.5 mb-2">
  <a
    href="mailto:mihajlomandic27@gmail.com"
    target="_blank"
    class="bg-neutral-50 dark:bg-neutral-800 border-[1.5px] border-neutral-300 dark:border-neutral-800 hover:border-green-500 dark:hover:border-green-300 transition-all hover:text-white dark:hover:text-black active:scale-95 hover:bg-green-500 dark:hover:bg-green-300 rounded-lg p-1.5 inline-flex gap-1.5 justify-center items-center"
  >
    <Mail size={24} stroke-width={1.5} absoluteStrokeWidth={true} />
