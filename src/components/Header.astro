---
import { PanelLeft, PanelLeftClose } from "@lucide/astro";
---

<header
  class="fixed top-0 left-0 w-full px-6 lg:px-8 h-14 items-center flex justify-between bg-white dark:bg-black"
>
  <div id="header-left">
    <a href="/" class="font-display font-semibold text-2xl">Michael Mandic</a>
  </div>
  <div id="header-right">
    <button
      @click="sidebarOpen = !sidebarOpen"
      class="text-neutral-500 hover:text-black hover:dark:text-white hover:cursor-pointer transition-colors lg:hidden"
    >
      <PanelLeft x-show="!sidebarOpen" size={16} absoluteStrokeWidth={true} />
      <PanelLeftClose
        x-show="sidebarOpen"
        size={16}
        absoluteStrokeWidth={true}
      />
      <span class="sr-only">Toggle sidebar</span>
    </button>
  </div>
</header>
