---
import MainLayout from "../layouts/MainLayout.astro";
import Section from "../components/Section.astro";
import MainHero from "../components/MainHero.astro";
import ExternalLinkIcon from "../components/ExternalLinkIcon.astro";
---

<MainLayout>
  <MainHero />

  <hr
    class="mt-5 mb-12 mx-6 border-none h-[1.5px] bg-forest-200 dark:bg-forest-800"
  />

  <Section title="Education">
    <span class="px-6 block font-text text-xs mb-0.5">2024 - Present </span>
    <p
      class="font-text px-6 leading-[1.5em] text-black dark:text-white text-balance"
    >
      BEng in Software Engineering
    </p>
    <span class="px-6 block font-text mt-0.5 text-xs"
      >University of Belgrade, School of Electrical Engineering
    </span>
  </Section>

  <Section title="Skills">
    <ul
      class="font-text text-black dark:text-white px-6 leading-[1.5em] text-balance flex flex-col gap-2"
    >
      <li>
        <small
          class="font-text block text-xs text-forest-500 dark:text-forest-400"
          >Programming Languages & Frameworks
        </small>Python, C++, JavaScript, HTML/CSS, React, Next.js, TailwindCSS
      </li>
      <li>
        <small
          class="font-text block text-xs text-forest-500 dark:text-forest-400"
          >Tools</small
        >Git, Linux, VS Code, PyCharm, Figma, MS Office/365
      </li>
      <li>
        <small
          class="font-text block text-xs text-forest-500 dark:text-forest-400"
          >Languages</small
        >
        English (Fluent), Serbian (Native), German (Conversational)
      </li>
    </ul>
  </Section>

  <!-- <Section title="Projects">
    <p class="font-text px-6 leading-[1.5em] text-balance">...</p>
  </Section> -->

  <Section title="Blog">
    <p class="font-text px-6 leading-[1.5em] text-balance">...</p>
  </Section>

  <Section title="Contact">
    <p class="font-text px-6 leading-[1.5em]">
      Send me an email to this domain or to <a
        href="mailto:mihajlomandic27@gmail.com"
        target="_blank"
        class="link dark:text-green-400 text-green-600"
        >mihajlomandic27@gmail.com<ExternalLinkIcon /></a
      >, or message me on <a
        href="https://www.linkedin.com/in/michael-mandic/"
        target="_blank"
        class="link dark:text-green-400 text-green-600">LinkedIn<ExternalLinkIcon /></a
      >!
    </p>
  </Section>
</MainLayout>
